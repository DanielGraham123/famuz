<div class="flex justify-between items-center">
  <!-- input search -->
  <form method="post" action="/muz-center/songs" class="py-3" id="searchForm">
    <div class="relative text-gray-600 focus-within:text-red-400">
      <span class="absolute inset-y-0 left-0 flex items-center pl-2">
        <button
          type="button"
          class="p-1 focus:outline-none focus:shadow-outline"
        >
          <i class="far fa-search"></i>
        </button>
      </span>
      <input
        type="search"
        name="query"
        class="py-2 text-sm text-gray-700 bg-gray-200 rounded-md pl-10 focus:outline-none focus:bg-white focus:text-red-400 focus:font-medium"
        placeholder="Search..."
        autocomplete="off"
      />
    </div>
  </form>

  <form method="post" action="/muz-center/songs">
    <!-- filter -->
    <select
      class="h-full bg-white shadow-sm text-gray-700 py-1 pl-3 px-8 appearance-none form-select bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-red-500"
      name="filter"
      onchange="this.form.submit()"
      id="filterForm"
    >
      <option value="">Sort by:</option>
      <option value="alph">Alphabetical</option>
      <option value="date">Date</option>
    </select>
  </form>
</div>
