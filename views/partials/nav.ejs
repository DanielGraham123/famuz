<nav class="bg-white px-4 py-4 shadow-md sticky top-0 z-50">
  <div class="container flex flex-wrap justify-between items-center mx-auto">
    <!-- logo icon -->
    <a href="/" class="flex flex-row items-center">
      <img src="/images/logo.png" alt="logo icon" />
      <span
        class="logo-text font-mono text-red-400 ml-2 text-3xl space-x-6 font-bold tracking-widest cursor-pointer"
        >famuz</span
      >
    </a>

    <!-- menu -->
    <div class="w-auto block">
      <ul class="flex flex-row space-x-4">
        <% mainPages.forEach(page => { %>
        <li>
          <% if (page.url == req_url) { %>
          <a
            href="<%= page.url %> "
            class="active:text-red-400 active:font-bold hover:text-red-400"
            ><%= page.name %>
          </a>
          <% } else { %>
          <a href="<%= page.url %> " class="hover:text-red-400"
            ><%= page.name %>
          </a>

          <% } %>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
